<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/month_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/form_month_label" />

        <EditText
            android:id="@+id/month_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/form_month_hint"
            android:inputType="text" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/option_month_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/form_month_choice_1"
                    android:checked="true"
                    />

                <RadioButton
                    android:id="@+id/option_month_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/form_month_choice_2"/>
            </RadioGroup>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/form_year_label"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/form_year_hint"
            android:inputType="number" />
        <Button
            android:onClick="findDays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_msg"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/result_lbl"/>
            <TextView
                android:id="@+id/day_output"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/result_placeholder"/>

        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>